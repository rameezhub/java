package zakir.rock_paper;
import java.util.Random;
import  java.util.Scanner;
public class jav {
    public static void main(String[] args) {
      int y;
      int com_point =0;
        int your_point =0;
      for(y=0;y<3;y++){
            Scanner sc = new Scanner(System.in);
            System.out.println("enter your value 0 for rock,1 for paper,2 for scissor :");
            int num = sc.nextInt();
            if (num == 0) {
                System.out.println("your choise is rock");
            } else if (num == 1) {
                System.out.println("your choise is paper");
            } else if (num == 2) {
                System.out.println("your choise is scissor");
            } else {
                System.out.println("enter a valid number 0,1,2");
                return;
            }
            Random random = new Random();
            int computer_input = random.nextInt(3);
            if (computer_input == 0) {
                System.out.println("computers choise is rock");
            }
            if (computer_input == 1) {
                System.out.println("computers choise is paper");
            }
            if (computer_input == 2) {
                System.out.println("computers choise is scissor");
            }
            if (num == computer_input) {
                System.out.println("this is draw");
            } else if (num == 0 && computer_input == 1 || num == 1 && computer_input == 2 || num == 2 && computer_input == 0) {
                System.out.println("you lose");
                com_point++;
            } else {
                System.out.println("you win");
                your_point++;
            }
        }
        System.out.println("computer is on "+com_point+" point");
        System.out.println("your point  is "+your_point+" point");

         if(your_point<com_point){
             System.out.println("computer won by "+com_point+" point");}
         else if(your_point>com_point)  {
             System.out.println("you won the game with"+your_point+"points");
             }
         else {
            System.out.println("this is a draw");
        }

    }
}
